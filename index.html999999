    <!-- LOGIC -->
    <script type="module">
        // Import new Google Auth modules
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-app.js";
        import { getAuth, signInWithEmailAndPassword, createUserWithEmailAndPassword, onAuthStateChanged, signOut, sendPasswordResetEmail, GoogleAuthProvider, signInWithPopup } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-auth.js";
        import { getDatabase, ref, update, onValue, set, push, serverTimestamp, get, query, limitToLast } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-database.js";
        
        const firebaseConfig = {
            apiKey: "AIzaSyAn38HlPSpz7yRZUmDG7qnedplFjv3WvAE",
            authDomain: "iskcon-food.firebaseapp.com",
            databaseURL: "https://iskcon-food-default-rtdb.firebaseio.com",
            projectId: "iskcon-food",
            storageBucket: "iskcon-food.firebasestorage.app",
            messagingSenderId: "987150159471",
            appId: "1:987150159471:web:c5f8506191ef06d147479a"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getDatabase(app);
        
        let USER = null;
        let CART = JSON.parse(localStorage.getItem('gp_v8_cart') || "[]");
        let PRODS = [], COUPON = null, STORE_OPEN = true;
        let CURRENT_PROD = null; 
        let slideInterval = null;
        
        let DELIVERY_FEE = 20; 
        let MIN_FREE_DELIVERY = 500; 

        const isValidEmail = (email) => /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(String(email).toLowerCase());
        const escapeHtml = (text) => {
            if(!text) return '';
            const map = { '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;' };
            return text.toString().replace(/[&<>"']/g, function(m) { return map[m]; });
        };

        // AUTH
        onAuthStateChanged(auth, u => {
            if(u) {
                USER = u;
                document.getElementById('auth-overlay').classList.add('hide');
                document.getElementById('navbar').classList.remove('hide');
                history.replaceState({view: 'view-home'}, 'Home', '');
                initData(u.uid, u);
            } else {
                document.getElementById('auth-overlay').classList.remove('hide');
                document.getElementById('navbar').classList.add('hide');
            }
        });

        // GOOGLE LOGIN LOGIC
        window.googleLogin = () => {
            const provider = new GoogleAuthProvider();
            signInWithPopup(auth, provider)
            .then((result) => {
                const user = result.user;
                toast(`Welcome ${user.displayName || "Devotee"}`);
            }).catch((error) => {
                err(error.message);
            });
        };

        window.login = () => {
            const e = val('l-email'), p = val('l-pass');
            if(!isValidEmail(e)) return err("Please enter a valid email format");
            signInWithEmailAndPassword(auth, e, p).catch(e => err(e.message));
        };

        window.signup = () => {
            const n=val('s-name'), e=val('s-email'), p=val('s-pass'), ph=val('s-phone');
            if(!n || !e || !p) return err("Please fill all details");
            if(!isValidEmail(e)) return err("Please use a real email address");
            if(p.length < 6) return err("Password must be 6+ chars for security");
            
            createUserWithEmailAndPassword(auth, e, p).then(c => {
                set(ref(db, `customers/${c.user.uid}`), { name:escapeHtml(n), email:e, phone:ph, address:'', joined:serverTimestamp() });
            }).catch(e => err(e.message));
        };

        window.forgotPass = () => {
            const email = val('f-email');
            if(!email) return err("Enter Email Address");
            if(!isValidEmail(email)) return err("Invalid Email Format");

            sendPasswordResetEmail(auth, email)
            .then(() => {
                alert(`Password Reset Link sent to ${email}. Check inbox/spam.`);
                toggleAuth('login');
            })
            .catch(error => {
                if(error.code === 'auth/user-not-found') err("Email not found.");
                else err("Error sending link: " + error.message);
            });
        };

        window.authOut = () => signOut(auth);
        
        window.toggleAuth = (t) => {
            ['login','signup','forgot'].forEach(x => document.getElementById(x+'-form').classList.add('hide'));
            document.getElementById(t+'-form').classList.remove('hide');
            document.getElementById('auth-msg').innerText = ''; 
        };

        // INIT DATA WITH AUTO-FILL
        function initData(uid, userObj) {
            onValue(ref(db, `customers/${uid}`), s => {
                let u = s.val();
                if(!u && userObj) {
                    u = { 
                        name: userObj.displayName || "User", 
                        email: userObj.email, 
                        phone: userObj.phoneNumber || "",
                        address: "",
                        photo: userObj.photoURL || "",
                        joined: serverTimestamp() 
                    };
                    set(ref(db, `customers/${uid}`), u);
                } else if (u) {
                     if(!u.photo && userObj && userObj.photoURL) {
                         update(ref(db, `customers/${uid}`), {photo: userObj.photoURL});
                     }
                }
                if(!u) return;

                document.getElementById('p-name').innerText = u.name;
                document.getElementById('p-phone').innerText = u.phone || "No Phone Set";
                document.getElementById('p-email').innerText = u.email;
                if(u.photo) document.getElementById('p-img').src = u.photo;
                
                document.getElementById('e-name').value = u.name;
                document.getElementById('e-phone').value = u.phone || "";
                document.getElementById('e-addr').value = u.address || "";
                
                document.getElementById('final-name').value = u.name;
                document.getElementById('final-phone').value = u.phone || "";
                if(u.address) {
                    document.getElementById('disp-addr').innerText = u.address;
                    document.getElementById('final-addr').value = u.address;
                }
            });

            // LOAD STORE SETTINGS
            onValue(ref(db, 'settings'), s => {
                const val = s.val() || {};
                STORE_OPEN = val.store_open !== false; 
                if(val.delivery_fee) DELIVERY_FEE = parseInt(val.delivery_fee);
                if(val.min_free_delivery) MIN_FREE_DELIVERY = parseInt(val.min_free_delivery);
                document.getElementById('store-closed-ui').classList.toggle('hide', STORE_OPEN);
                refreshCart();
            });

            // LOAD SLIDERS
            onValue(ref(db, 'sliders'), s => {
                const b = document.getElementById('slider-box');
                const d = document.getElementById('slider-dots');
                b.innerHTML = ''; d.innerHTML = '';
                const slides = s.exists() ? Object.values(s.val()) : [];
                if(slides.length > 0) {
                    slides.forEach((x, i) => {
                        b.innerHTML += `<div class="slide" style="background-image:url('${x.image}')"></div>`;
                        d.innerHTML += `<div class="dot ${i===0?'active':''}" id="dot-${i}"></div>`;
                    });
                    if(slideInterval) clearInterval(slideInterval);
                    slideInterval = setInterval(() => slide(1, true), 2000); 
                }
            });

            onValue(ref(db, 'categories'), s => {
                const b = document.getElementById('cat-box');
                let h = `<div class="cat-item active" onclick="filt('all',this)"><img src="https://cdn-icons-png.flaticon.com/512/706/706164.png" class="cat-img"><div class="cat-name">All</div></div>`;
                if(s.exists()) Object.values(s.val()).forEach(x => { 
                    if(x.active) h += `<div class="cat-item" onclick="filt('${x.name}',this)"><img src="${x.image}" class="cat-img"><div class="cat-name">${x.name}</div></div>`; 
                });
                b.innerHTML = h;
            });

            onValue(ref(db, 'menu'), s => {
                PRODS = [];
                if(s.exists()) Object.entries(s.val()).forEach(([k,v]) => PRODS.push({id:k, ...v}));
                renderMenu(PRODS);
            });

            onValue(query(ref(db, 'orders'), limitToLast(30)), s => renderHistory(s.val()));
        }

        window.slide = (dir, auto=false) => {
            const box = document.getElementById('slider-box');
            if(!box) return; 
            const w = box.clientWidth;
            const max = box.scrollWidth - w;
            let next = box.scrollLeft + (w * dir);
            if (auto && next > max + 10) next = 0; 
            else if (!auto) { if(next < 0) next = 0; if(next > max) next = max; }
            box.scrollTo({ left: next, behavior: 'smooth' });
            setTimeout(() => {
                const idx = Math.round(box.scrollLeft / w);
                document.querySelectorAll('.dot').forEach((e, i) => {
                    if(i === idx) e.classList.add('active'); else e.classList.remove('active');
                });
            }, 300); 
        };

        function renderMenu(list) {
            const b = document.getElementById('prod-box'); b.innerHTML = '';
            if(!list.length) { b.innerHTML = '<div class="center" style="padding:40px; color:#aaa; grid-column:1/-1;">No Dishes Found</div>'; return; }
            
            list.filter(x => x.active).forEach(p => {
                const c = CART.find(x => x.id == p.id);
                const q = c ? c.qty : 0;
                let btn = `<div class="add-btn" onclick="event.stopPropagation(); add('${p.id}')">ADD</div>`;
                if(q > 0) btn = `<div class="add-btn" onclick="event.stopPropagation();" style="background:white; color:var(--text-main); border:1px solid var(--success);"><div class="qty-box"><i class="fa-solid fa-minus" onclick="mod('${p.id}',-1)"></i> <span>${q}</span> <i class="fa-solid fa-plus" onclick="mod('${p.id}',1)"></i></div></div>`;
                let unitBadge = p.unitType ? `<span class="unit-badge">${p.unitVal} ${p.unitType}</span>` : '';

                b.innerHTML += `
                <div class="prod-card" onclick="openProduct('${p.id}')">
                    <div class="prod-info">
                        <div>
                            <div class="veg-tag"><div class="veg-dot"></div></div>
                            <div style="font-weight:700; margin-bottom:6px; line-height:1.2; font-size:1rem;">
                                ${escapeHtml(p.name)} ${unitBadge}
                            </div>
                            <div style="font-weight:800; font-size:0.95rem;">₹${p.price}</div>
                        </div>
                        <div style="font-size:0.75rem; color:#888;" class="line-clamp-2">${escapeHtml(p.description||p.category)}</div>
                    </div>
                    <div class="prod-img-wrapper">
                        <img src="${p.image}" class="prod-img">
                        ${btn}
                    </div>
                </div>`;
            });
            refreshCart();
        }

        window.openProduct = (id) => {
            const p = PRODS.find(x => x.id == id);
            if(!p) return;
            CURRENT_PROD = p;

            document.getElementById('pd-name').innerText = p.name;
            document.getElementById('pd-price').innerText = `₹${p.price}`;
            document.getElementById('pd-desc').innerText = p.description || "No description available.";
            
            const uBox = document.getElementById('pd-unit');
            if(p.unitType) {
                uBox.innerText = `${p.unitVal} ${p.unitType}`;
                uBox.style.display = 'inline-block';
            } else {
                uBox.style.display = 'none';
            }

            const gBox = document.getElementById('pd-gallery-box');
            let images = (p.gallery && p.gallery.length > 0) ? p.gallery : [p.image];
            gBox.innerHTML = images.map(img => `<img src="${img}" class="pd-slide">`).join('');

            updateProductFooter();
            nav('view-product');
        };

        function updateProductFooter() {
            if(!CURRENT_PROD) return;
            const p = CURRENT_PROD;
            const c = CART.find(x => x.id == p.id);
            const q = c ? c.qty : 0;
            const f = document.getElementById('pd-action-box');

            if(q === 0) {
                f.innerHTML = `
                    <div style="font-weight:700; font-size:1.1rem;">₹${p.price}</div>
                    <button class="btn btn-brand" style="width:140px; padding:12px;" onclick="add('${p.id}'); updateProductFooter()">
                        ADD TO PLATE
                    </button>
                `;
            } else {
                f.innerHTML = `
                    <div style="font-weight:700; font-size:1.1rem;">₹${p.price * q}</div>
                    <div style="background:var(--brand); color:white; border-radius:12px; height:45px; width:140px; display:flex; align-items:center; justify-content:space-between; padding:0 15px; font-weight:700;">
                        <i class="fa-solid fa-minus" style="cursor:pointer;" onclick="mod('${p.id}',-1); updateProductFooter()"></i>
                        <span>${q}</span>
                        <i class="fa-solid fa-plus" style="cursor:pointer;" onclick="mod('${p.id}',1); updateProductFooter()"></i>
                    </div>
                `;
            }
        }

        window.add = (id) => { const p = PRODS.find(x => x.id == id); CART.push({...p, qty:1}); saveCart(); toast("Added to Plate"); };
        window.mod = (id,d) => { 
            const i = CART.findIndex(x => x.id == id); 
            if(i > -1) { 
                CART[i].qty += d; 
                if(CART[i].qty <= 0) CART.splice(i, 1); 
                saveCart(); 
            } 
        };
        window.clearCart = () => { if(confirm('Clear entire plate?')) { CART=[]; saveCart(); nav('view-home'); } };
        
        function saveCart() { 
            localStorage.setItem('gp_v8_cart', JSON.stringify(CART)); 
            renderMenu(PRODS); 
            if(document.getElementById('view-product').style.display !== 'none' && CURRENT_PROD) {
                updateProductFooter();
            }
        }

        function refreshCart() {
            const count = CART.reduce((a,b) => a + b.qty, 0);
            const sub = CART.reduce((a,b) => a + (b.price * b.qty), 0);
            
            const bdg = document.getElementById('nav-badge');
            if(count>0) { bdg.style.display = 'block'; } else { bdg.style.display='none'; }
            
            const fl = document.getElementById('float-bar');
            if(count > 0 && document.getElementById('view-home').style.display !== 'none') {
                fl.style.display = 'flex';
                document.getElementById('fl-qty').innerText = `${count} Items`;
                document.getElementById('fl-total').innerText = `₹${sub}`;
            } else fl.style.display = 'none';

            if(CART.length === 0) {
                document.getElementById('cart-empty').classList.remove('hide');
                document.getElementById('cart-content').classList.add('hide');
            } else {
                document.getElementById('cart-empty').classList.add('hide');
                document.getElementById('cart-content').classList.remove('hide');
                
                const lst = document.getElementById('cart-items'); lst.innerHTML = '';
                CART.forEach(i => {
                    const uStr = i.unitType ? `(${i.unitVal} ${i.unitType})` : '';
                    lst.innerHTML += `
                    <div class="flex-between" style="background:#fff; border:1px solid #f0f0f0; padding:15px; border-radius:12px;">
                        <div>
                            <div class="veg-tag" style="margin-bottom:4px; width:12px; height:12px;"><div class="veg-dot" style="width:6px; height:6px;"></div></div>
                            <div style="font-weight:700;">${escapeHtml(i.name)} <small>${uStr}</small></div>
                            <div style="font-size:0.85rem; color:#888;">₹${i.price}</div>
                        </div>
                        <div style="border:1px solid #ddd; border-radius:8px; height:32px; width:90px; display:flex; align-items:center; justify-content:space-between; padding:0 8px; font-weight:700;">
                            <i class="fa-solid fa-minus" style="cursor:pointer; color:var(--text-light);" onclick="mod('${i.id}',-1)"></i>
                            <span>${i.qty}</span>
                            <i class="fa-solid fa-plus" style="cursor:pointer; color:var(--success);" onclick="mod('${i.id}',1)"></i>
                        </div>
                    </div>`;
                });
            }

            let disc = 0;
            if(COUPON) {
                disc = COUPON.type === 'flat' ? COUPON.value : Math.round(sub * (COUPON.value/100));
                if(sub < COUPON.minOrder) { 
                    disc = 0; COUPON = null; 
                    document.getElementById('cp-res').innerText = "Minimum amount not met"; 
                    document.getElementById('cp-res').style.color = "var(--error)"; 
                }
            }

            // FREE DELIVERY
            let finalDelivery = DELIVERY_FEE;
            const freeBar = document.getElementById('free-del-bar');
            
            if (sub >= MIN_FREE_DELIVERY) {
                finalDelivery = 0;
                freeBar.classList.remove('locked');
                freeBar.innerHTML = `🎉 Great! Free Delivery Unlocked`;
                document.getElementById('b-del').innerHTML = `<span style="text-decoration:line-through; color:#aaa; margin-right:5px;">₹${DELIVERY_FEE}</span> <span style="color:var(--success)">FREE</span>`;
            } else {
                const diff = MIN_FREE_DELIVERY - sub;
                freeBar.classList.add('locked');
                freeBar.innerHTML = `<i class="fa-solid fa-truck"></i> Add items worth ₹${diff} for FREE Delivery`;
                document.getElementById('b-del').innerText = `₹${finalDelivery}`;
            }

            const total = Math.max(0, sub - disc + finalDelivery);
            document.getElementById('b-item').innerText = '₹' + sub;
            document.getElementById('b-disc').innerText = '- ₹' + disc;
            document.getElementById('b-total').innerText = '₹' + total;
        }

        window.applyCp = () => {
            const c = val('cp-code').toUpperCase();
            if(!c) return toast("Enter Code");
            get(ref(db, `coupons/${c}`)).then(s => {
                const v = s.val();
                if(v && v.active) { 
                    COUPON = v; 
                    document.getElementById('cp-res').innerText = "Applied Successfully"; 
                    document.getElementById('cp-res').style.color = "var(--success)";
                    saveCart(); 
                } else {
                    document.getElementById('cp-res').innerText = "Invalid Code";
                    document.getElementById('cp-res').style.color = "var(--error)";
                }
            });
        };

        window.placeOrder = async () => {
            if(!STORE_OPEN) return toast("Kitchen is Closed");
            if(CART.length === 0) return toast("Plate is empty!");

            const name = escapeHtml(val('final-name'));
            const phone = escapeHtml(val('final-phone'));
            const addr = escapeHtml(val('final-addr'));

            if(name.length < 2) return toast("Please Enter Receiver Name");
            if(phone.length < 10) return toast("Please Enter Valid Phone Number");
            if(addr.length < 5) return toast("Address too short!");

            update(ref(db, `customers/${USER.uid}`), { name:name, phone:phone, address:addr });

            const sub = CART.reduce((a,b) => a + (b.price * b.qty), 0);
            let deliveryCharge = (sub >= MIN_FREE_DELIVERY) ? 0 : DELIVERY_FEE;
            let discVal = 0;
            if(COUPON && sub >= COUPON.minOrder) {
                discVal = COUPON.type === 'flat' ? COUPON.value : Math.round(sub * (COUPON.value/100));
            }

            const tot = sub + deliveryCharge - discVal;

            await push(ref(db, 'orders'), {
                userId: USER.uid,
                userName: name,
                userPhone: phone,
                address: addr,
                items: CART,
                subTotal: sub,
                deliveryFee: deliveryCharge,
                discount: discVal,
                total: tot,
                status: 'placed',
                createdAt: serverTimestamp()
            });
            CART = []; COUPON = null; saveCart();
            nav('view-orders', document.querySelectorAll('.nav-btn')[2]);
            toast("Order Placed Successfully!");
        };

        function renderHistory(data) {
            const lst = document.getElementById('orders-list'); lst.innerHTML = '';
            if(!data) { lst.innerHTML = '<div class="center" style="margin-top:50px; color:#aaa;">No past orders</div>'; return; }

            Object.entries(data)
                .map(([k,v]) => ({id:k, ...v}))
                .filter(x => x.userId === USER.uid)
                .sort((a,b) => b.createdAt - a.createdAt)
                .forEach(o => {
                    const st = o.status;
                    
                    // --- DRIVER INFO & LIVE TRACKING UI ---
                    let trackingUI = '';
                    if(st === 'out_for_delivery') {
                        const dName = o.driverName || 'Partner Driver';
                        const dProv = o.deliveryProvider || 'Govinda Delivery';
                        const dPhone = o.driverPhone || '';
                        const dTrack = o.trackingUrl || '';
                        
                        trackingUI = `
                        <div class="track-box">
                            <div class="flex-between">
                                <b style="color:#2E7D32; display:flex; align-items:center; gap:6px;">
                                    <i class="fa-solid fa-person-biking"></i> ${dProv}
                                </b>
                                ${dTrack ? `<a href="${dTrack}" target="_blank" class="live-btn">LIVE TRACK</a>` : '<span style="font-size:0.7rem; color:#555;">Arriving Soon</span>'}
                            </div>
                            <div class="driver-row">
                                <div class="d-img-bg"><i class="fa-solid fa-user-shield" style="font-size:1.2rem; color:#444;"></i></div>
                                <div>
                                    <div style="font-weight:700; font-size:0.95rem;">${dName}</div>
                                    <div style="font-size:0.75rem; color:#666;">Vaccinated & Trained</div>
                                </div>
                                ${dPhone ? `<a href="tel:${dPhone}" class="call-btn-circle" style="margin-left:auto;"><i class="fa-solid fa-phone"></i></a>` : ''}
                            </div>
                        </div>`;
                    }
                    // --- END DRIVER UI ---

                    lst.innerHTML += `
                    <div class="order-card st-${st}" onclick="openBill('${o.id}')">
                        <div class="flex-between" style="margin-bottom:10px; border-bottom:1px dashed #eee; padding-bottom:10px;">
                            <div style="display:flex; gap:10px; align-items:center;">
                                <div style="background:#f0f0f0; width:35px; height:35px; border-radius:8px; display:grid; place-items:center;"><i class="fa-solid fa-box"></i></div>
                                <div>
                                    <div style="font-weight:700;">#${o.id.slice(-5).toUpperCase()}</div>
                                    <div style="font-size:0.75rem; color:#888;">${new Date(o.createdAt).toLocaleString()}</div>
                                </div>
                            </div>
                            <span style="font-size:0.75rem; font-weight:700; text-transform:uppercase; padding:4px 8px; border-radius:5px;" class="st-${st}">${st.replace('_',' ')}</span>
                        </div>
                        <div style="font-size:0.85rem; color:#555; margin-bottom:12px;">
                            ${o.items.map(i => `${i.qty} x ${escapeHtml(i.name)}`).join(', ')}
                        </div>

                        ${trackingUI}

                        <div class="flex-between" style="margin-top:10px;">
                            <div style="font-weight:800; font-size:1.1rem;">₹${o.total}</div>
                            <div style="font-size:0.8rem; font-weight:700; color:var(--brand);">Details <i class="fa-solid fa-chevron-right"></i></div>
                        </div>
                    </div>`;
                });
        }

        window.openBill = async (oid) => {
            const s = await get(ref(db, `orders/${oid}`));
            const o = s.val();
            const b = document.getElementById('bill-content');
            b.innerHTML = `
                <div class="flex-between" style="margin-bottom:20px;">
                    <h3 style="margin:0;">Order Receipt</h3>
                    <div class="center" style="width:30px; height:30px; background:#f5f5f5; border-radius:50%; cursor:pointer;" onclick="shutMod()"><i class="fa-solid fa-xmark"></i></div>
                </div>
                <div style="text-align:center; margin-bottom:20px;">
                    <div style="font-weight:800; color:var(--brand); font-size:1.2rem; text-transform:uppercase;">Govinda's Prasadam</div>
                    <div style="font-size:0.85rem; color:#888;">ISKCON Hadapsar</div>
                </div>
                <div style="border-top:2px dashed #eee; padding-top:15px;">
                    ${o.items.map(i => `<div class="flex-between" style="font-size:0.9rem; margin-bottom:10px;"><span>${i.qty} x ${escapeHtml(i.name)}</span><span style="font-weight:600;">₹${i.price*i.qty}</span></div>`).join('')}
                </div>
                <div style="border-top:1px solid #eee; margin-top:10px; padding-top:10px;">
                    <div class="flex-between" style="font-size:0.9rem; margin-bottom:5px;"><span>Subtotal</span><span>₹${o.subTotal}</span></div>
                    <div class="flex-between" style="font-size:0.9rem; margin-bottom:5px; color:var(--success);"><span>Discount</span><span>- ₹${o.discount}</span></div>
                    <div class="flex-between" style="font-size:0.9rem; margin-bottom:5px;"><span>Delivery</span><span>₹${o.deliveryFee}</span></div>
                    <div class="flex-between" style="font-weight:800; font-size:1.2rem; margin-top:15px; border-top:2px dashed #aaa; padding-top:15px;"><span>Paid Total</span><span>₹${o.total}</span></div>
                </div>
                <div style="text-align:center; margin-top:30px; font-size:0.75rem; color:#ccc;">Hare Krishna! Served with love.</div>
            `;
            document.getElementById('m-bill').classList.add('open');
        }

        window.nav = (p, el, addToHistory = true) => {
            if(addToHistory) history.pushState({ view: p }, null, "");
            document.querySelectorAll('.view').forEach(v => v.classList.add('hide'));
            document.getElementById(p).classList.remove('hide');
            
            if(el) { 
                document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active')); 
                el.classList.add('active'); 
            } else {
                const btns = document.querySelectorAll('.nav-btn');
                btns.forEach(b => b.classList.remove('active'));
                if(p === 'view-home') btns[0].classList.add('active');
                if(p === 'view-cart') btns[1].classList.add('active');
                if(p === 'view-orders') btns[2].classList.add('active');
                if(p === 'view-profile') btns[3].classList.add('active');
            }
            
            const head = document.getElementById('header-main');
            const float = document.getElementById('float-bar');
            
            if(p === 'view-home') { 
                head.style.display = 'flex'; 
                refreshCart(); 
            } else { 
                head.style.display = 'none'; 
                float.style.display = 'none'; 
            }

            const navBar = document.getElementById('navbar');
            if(p === 'view-product') {
                 navBar.classList.add('hide');
            } else {
                 navBar.classList.remove('hide');
            }
            window.scrollTo(0,0);
        };

        window.addEventListener('popstate', (e) => {
            if(e.state && e.state.view) nav(e.state.view, null, false);
            else { history.pushState(null, null, location.href); document.getElementById('m-exit').classList.add('open'); }
        });

        window.closeExitModal = () => document.getElementById('m-exit').classList.remove('open');
        window.confirmExit = () => { history.back(); history.back(); window.location.href = "about:blank"; };

        window.findLoc = () => {
            toast("Detecting GPS...");
            navigator.geolocation.getCurrentPosition(p => {
                const s = `GPS: ${p.coords.latitude.toFixed(4)}, ${p.coords.longitude.toFixed(4)}`;
                document.getElementById('disp-addr').innerText = "Current Location";
                document.getElementById('final-addr').value = s;
                document.getElementById('e-addr').value = s;
                toast("Location Updated");
            });
        };

        window.filt = (c,el) => {
            document.querySelectorAll('.cat-item').forEach(x => x.classList.remove('active')); 
            el.classList.add('active');
            c === 'all' ? renderMenu(PRODS) : renderMenu(PRODS.filter(x => x.category === c));
        };

        // UI HELPERS
        window.shutMod = () => { document.querySelectorAll('.modal').forEach(m => m.classList.remove('open')); };
        window.openEdit = () => { document.getElementById('m-edit').classList.add('open'); };
        window.saveProfile = () => {
            const n = escapeHtml(val('e-name')); 
            const p = escapeHtml(val('e-phone')); 
            const a = escapeHtml(val('e-addr'));
            update(ref(db, `customers/${USER.uid}`), {name:n, phone:p, address:a});
            toast("Profile Updated"); shutMod();
        };

        window.onclick = function(event) { if (event.target.classList.contains('modal')) shutMod(); };
        function val(id){ return document.getElementById(id).value; }
        function err(m){ document.getElementById('auth-msg').innerText = m.replace('Firebase:',''); }
        function toast(m){ 
            document.getElementById('toast-msg').innerText=m; 
            const t = document.getElementById('toast'); 
            t.classList.add('show'); 
            setTimeout(()=>t.classList.remove('show'), 3000); 
        }

    </script>
</body>
</html>
